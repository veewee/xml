{
    "name": "veewee/xml",
    "description": "XML without worries",
    "keywords": [
        "dom", "xml", "xsd", "xslt", "dom-manipulation", "reader", "xpath"
    ],
    "type": "library",
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-xml": "*",
        "ext-xsl": "*",
        "ext-xmlreader": "*",
        "ext-xmlwriter": "*",
        "azjezz/psl": "^1.1",
        "webmozart/assert": "^1.9",
        "thecodingmachine/safe": "^1.3"
    },
    "require-dev": {
        "veewee/composer-run-parallel": "^1.0.0",
        "symfony/finder": "^5.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Toon Verwerft",
            "email": "toonverwerft@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "VeeWee\\Xml\\": "src/Xml"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "VeeWee\\Xml\\Tests\\": "tests/Xml"
        }
    },
    "scripts": {
        "autoload": [
            "echo '' > src/bootstrap.php",
            "@php build/bootstrap.php"
        ],
        "cs": "PHP_CS_FIXER_IGNORE_ENV=1 php ./tools/php-cs-fixer.phar fix --dry-run",
        "cs:fix": "PHP_CS_FIXER_IGNORE_ENV=1 php ./tools/php-cs-fixer.phar fix",
        "psalm": "./tools/psalm.phar --no-cache",
        "tests": "./tools/phpunit.phar",
        "testquality": "@parallel coverage infection",
        "coverage": "@php ./tools/full-coverage-check.php .phpunit.cache/clover/clover.xml",
        "infection": [
            "Composer\\Config::disableProcessTimeout",
            "./tools/infection.phar"
        ],
        "ci": [
            "@autoload",
            "@parallel cs psalm tests",
            "@parallel coverage infection"
        ]
    }
}
